{
  "name": "wsssoftware/laraveltoolkit",
  "description": "A Laravel Toolkit with basics tools",
  "keywords": [
    "laravel",
    "laraveltoolkit"
  ],
  "homepage": "https://github.com/wsssoftware/laraveltoolkit",
  "license": "MIT",
  "authors": [
    {
      "name": "Allan Mariucci Carvalho",
      "email": "allan.m.carvalho@outlook.com",
      "role": "Developer"
    }
  ],
  "require": {
    "ext-bcmath": "*",
    "php": "^8.4",
    "ext-dom": "*",
    "ext-intl": "*",
    "inertiajs/inertia-laravel": "^v1.3.0|^v2.0.0",
    "jaybizzle/crawler-detect": "^v1.2.120",
    "spatie/laravel-package-tools": "^1.16.5",
    "illuminate/contracts": "^11.24"
  },
  "require-dev": {
    "laravel/pint": "^v1.18.1",
    "nunomaduro/collision": "^v8.4.0",
    "orchestra/testbench": "^9.5.0",
    "pestphp/pest": "^v3.2.5",
    "pestphp/pest-plugin-arch": "^v3.0.0",
    "pestphp/pest-plugin-laravel": "^v3.0.0",
    "spatie/laravel-ray": "^1.37.1"
  },
  "autoload": {
    "psr-4": {
      "LaravelToolkit\\": "src/",
      "LaravelToolkit\\Database\\Factories\\": "database/factories/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LaravelToolkit\\Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/"
    }
  },
  "scripts": {
    "post-autoload-dump": "@composer run prepare",
    "clear": "@php vendor/bin/testbench package:purge-laraveltoolkit --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": [
      "@composer run prepare",
      "@php vendor/bin/testbench workbench:build --ansi"
    ],
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "@composer run build",
      "@php vendor/bin/testbench serve"
    ],
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "LaravelToolkit\\LaravelToolkitServiceProvider"
      ],
      "aliases": {
        "LaravelToolkit": "LaravelToolkit\\Facades\\LaravelToolkit"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
